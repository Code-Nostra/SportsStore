@model ProductsListViewModel


@foreach (var p in Model.Products)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @p.Name
                <span class="badge bg-pill bg-primary" style="float:right">
                    @p.Price.ToString("c")
                </span>
            </h4>
        </div>
        <div class="card-text p-1">@p.Description</div>
    </div>

}
<!--Когда механизм Razor обнаруживает атрибутpage-model в элементе div, он обращается
    к классу PageLinkTagHelper(который подключён в _ViewImports.cshtml) для преобразования элемента, что и дает набор ссылок-->
<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>